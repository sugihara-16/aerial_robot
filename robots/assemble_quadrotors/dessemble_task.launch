<?xml version="1.0" encoding="utf-8"?>
<launch>
  <arg name="male_quad_spawn_x" default="-1.5"/>
  <arg name="male_quad_spawn_y" default="-0.3"/>
  <arg name="male_quad_spawn_yaw" default="0.0"/>
  <arg name="female_quad_spawn_x" default="1.0"/>
  <arg name="female_quad_spawn_y" default="0.0"/>
  <arg name="female_quad_spawn_yaw" default="3.141592"/>
  <group>
    <include file="$(find assemble_quadrotors)/launch/bringup.launch">
      <arg name="robot_id" value="1"/>
      <arg name="real_machine" value="false"/>
      <arg name="simulation" value="true"/>
      <arg name="headless" value="false"/>
      <arg name="launch_gazebo" value="true"/>
      <arg name="estimate_mode" value="1"/>
      <arg name="airframe" value="male"/>
      <arg name="initial_assemble" value="false"/>
      <arg name="gui" value="true"/>
      <arg name="spawn_x" default="$(arg male_quad_spawn_x)"/>
      <arg name="spawn_y" default="$(arg male_quad_spawn_y)"/>
      <arg name="spawn_yaw" default="$(arg male_quad_spawn_yaw)"/>
    </include>

    <include file="$(find assemble_quadrotors)/launch/bringup.launch">
      <arg name="robot_id" value="2"/>
      <arg name="real_machine" value="false"/>
      <arg name="simulation" value="true"/>
      <arg name="headless" value="false"/>
      <arg name="launch_gazebo" value="false"/>
      <arg name="estimate_mode" value="1"/>
      <arg name="airframe" value="female"/>
      <arg name="initial_assemble" value="false"/>
      <arg name="gui" value="true"/>
      <arg name="spawn_x" default="$(arg female_quad_spawn_x)"/>
      <arg name="spawn_y" default="$(arg female_quad_spawn_y)"/>
      <arg name="spawn_yaw" default="$(arg female_quad_spawn_yaw)"/>
    </include>
  </group>

</launch>
