<?xml version="1.0"?>
<robot
    xmlns:xacro="http://www.ros.org/wiki/xacro" name="gimbalrotor_link" >

  <xacro:macro name="gimbalrotor_center_link" params="child1 child2 child3 child4">
    ## dummy
    <link name="root">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.0001"/>
        <inertia
            ixx="0.0001" ixy="0.0" ixz="0.0"
            iyy="0.0001" iyz="0.0"
            izz="0.0002"/>
      </inertial>
    </link>
    <joint name="root_joint" type="fixed">
      <parent link="root"/>
      <child link="base_link"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>

    ## link
    <link name="base_link">
      <inertial>
        <origin xyz="-0.0081803 0.0 0.1184962" rpy="0 0 0"/>
        <mass value="1.82"/>
        <inertia
            ixx="0.05" iyy="0.08" izz="0.10"
            ixy="0.0" ixz="0.0" iyz="0.0"/>
      </inertial>   
      <visual>
        <origin xyz="0 0 0" rpy="0 0 3.141592"/>
        <geometry>
          <mesh filename="package://gimbalrotor/urdf/quad/mesh/base_link.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0.1205" rpy="0 0 0"/>
        <geometry>
          <box size="0.52 0.52 0.241"/>
        </geometry>
      </collision>
    </link>

    <xacro:damping_factor link="base_link"/>

    <link name="fc">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.0001"/>
        <inertia
            ixx="0.0001" ixy="0.0" ixz="0.0"
            iyy="0.0001" iyz="0.0"
            izz="0.0002"/>
      </inertial>
    </link>
    <joint name="fc_joint" type="fixed">
      <child link="fc"/>
      <parent link="base_link"/>
      <origin rpy="0 0 0" xyz="0 0 0.12947"/>
      <axis xyz="0 0 1"/>
    </joint>

    ## dummy rotor arms
    <link name="rotor_arm${child1}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia
            ixx="0.001" ixy="0.0" ixz="0.0"
            iyy="0.001" iyz="0.0"
            izz="0.002"/>
      </inertial>
    </link>
    <joint name="base_arm_joint${child1}" type="fixed">
      <parent link="base_link"/>
      <child link="rotor_arm${child1}"/>
      <origin rpy="0 0 ${pi/4}" xyz="0.12488 0.12509 0.1185"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="rotor_arm${child2}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia
            ixx="0.001" ixy="0.0" ixz="0.0"
            iyy="0.001" iyz="0.0"
            izz="0.002"/>
      </inertial>
    </link>
    <joint name="base_arm_joint${child2}" type="fixed">
      <parent link="base_link"/>
      <child link="rotor_arm${child2}"/>
      <origin rpy="0 0 ${pi*3.0/4.0}" xyz="-0.12488 0.12509 0.1185"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="rotor_arm${child3}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia
            ixx="0.001" ixy="0.0" ixz="0.0"
            iyy="0.001" iyz="0.0"
            izz="0.002"/>
      </inertial>
    </link>
    <joint name="base_arm_joint${child3}" type="fixed">
      <parent link="base_link"/>
      <child link="rotor_arm${child3}"/>
      <origin rpy="0 0 ${pi*5.0/4.0}" xyz="-0.12488 -0.12509 0.1185"/>
      <axis xyz="0 0 1"/>
    </joint>

    <link name="rotor_arm${child4}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.1"/>
        <inertia
            ixx="0.001" ixy="0.0" ixz="0.0"
            iyy="0.001" iyz="0.0"
            izz="0.002"/>
      </inertial>
    </link>
    <joint name="base_arm_joint${child4}" type="fixed">
      <parent link="base_link"/>
      <child link="rotor_arm${child4}"/>
      <origin rpy="0 0 ${-pi/4.0}" xyz="0.12488 -0.12509 0.1185"/>
      <axis xyz="0 0 1"/>
    </joint>

    <xacro:friction self="base_link"/>
  </xacro:macro>

  <xacro:macro name="gimbalrotor_thrust_link" params="self rotor_direction">
    ## link
    #### rotor parent link (virtual) ####
    <link name="gimbal_link${self}">
      <inertial>
        <origin xyz="0.02284089 0.0 0.00720578" rpy="0 0 0"/>
        <mass value="0.1333"/>
        <inertia
            ixx="0.0005" iyy="0.0005" izz="0.0005"
            ixy="0" ixz="0" iyz="0.0"/>
      </inertial>
      <collision>
        <origin xyz="0.0 0 0" rpy="0 0 0"/>
        <geometry>
          <cylinder radius="0.02" length="0.033"/>
        </geometry>
      </collision>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <mesh filename="package://gimbalrotor/urdf/quad/mesh/rotor_module.dae"/>
        </geometry>
      </visual>
    </link>
    <xacro:damping_factor link="gimbal_link${self}"/>

    ## thrust link (virtual)
    <link name="thrust${self}">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="0.01"/>
        <inertia
            ixx="0.001" ixy="0.0" ixz="0.0"
            iyy="0.001" iyz="0.0"
            izz="0.002"/>
      </inertial>
    </link>
    <xacro:damping_factor link="thrust${self}"/>

    #### joints ####

    #### gimbal joints ####
    <joint name="gimbal${self}" type="revolute">
      <limit effort="6.6" lower="-1.57" upper="1.57" velocity="3.0"/>
      <parent link="rotor_arm${self}"/>
      <child link="gimbal_link${self}"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <axis xyz="1 0 0"/>
      <dynamics damping="0.8" friction="0.0"/>
    </joint>

    <transmission name="joint_tran${self}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="gimbal${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
      </joint>
      <actuator name="servo${self}">
        <hardwareInterface>hardware_interface/EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    #### rotor joint (virtual) ####
    <joint name="rotor${self}" type="continuous">
      <limit effort="100.0" lower="${min_force}" upper="${max_force}" velocity="0.5"/>
      <parent link="gimbal_link${self}"/>
      <child link="thrust${self}"/>
      <origin rpy="0 0 0" xyz="0.018 0.00 0.00438"/>
      <axis xyz="0 0 ${rotor_direction}"/>
    </joint>


    <transmission name="rotor_tran${self}">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="rotor${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
      </joint>
      <actuator name="rotor_actuator${self}">
        <hardwareInterface>RotorInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>
</robot>
